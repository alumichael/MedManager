<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dash_board"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bgpicfi"
    tools:context="com.example.mike4christ.medmanager.DashBoard">


    <ImageView
        android:id="@+id/icon"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/firebase"
        android:layout_width="100dp"
        android:layout_height="100dp" />

    <TextView
        android:layout_below="@+id/icon"
        android:id="@+id/dashboard_welcome"
        android:layout_centerHorizontal="true"
        android:text=" Welcome !"
        android:textSize="15sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="@color/colorPrimaryDark"
        />

    <TextView
        android:layout_below="@+id/dashboard_welcome"
        android:id="@+id/user"
        android:layout_centerHorizontal="true"
        android:text="Michael"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:textColor="#ffffff"
        />
    <TextView
        android:layout_below="@+id/user"
        android:id="@+id/describe_app"
        android:layout_centerHorizontal="true"
        android:text="This Application is to track a prescribe drug intake Period for Reminder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textColor="#ffffff"
        />


    <Button
        android:layout_marginTop="20dp"
        android:layout_below="@+id/describe_app"
        android:id="@+id/dashboard_btn_proceed"
        android:text="Proceed"
        android:background="@drawable/roundededit"
        style="@style/Widget.AppCompat.Button.Colored"
        android:drawableEnd="@drawable/ic_proceed"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:drawableRight="@drawable/ic_proceed" />


</RelativeLayout>
