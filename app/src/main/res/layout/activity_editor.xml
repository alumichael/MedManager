<!-- Layout for the editor -->
<com.hendraanggrian.widget.RevealFrameLayout android:id="@+id/revealLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".EmployeeEditor"
    android:background="@drawable/bgpicfi"
    xmlns:app="http://schemas.android.com/apk/res-auto">


            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:id="@+id/root_layout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/activity_margin"
                tools:context=".EmployeeEditor">



                <ImageView
                    android:id="@+id/profileImageView"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_margin="4dp"
                    android:layout_gravity="center"
                    android:background="@drawable/circle_close"
                    android:src="@drawable/ic_profile_image"
                     />

                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/profileImageView"
                    android:id="@+id/profile_input_firstname"
                    android:layout_width="match_parent"
                    android:textColorHint="#ffffff"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/edit_employee_firstname"
                        android:hint="First Name"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>


                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/profile_input_firstname"
                    android:id="@+id/profile_input_lastname"
                    android:layout_width="match_parent"
                    android:textColorHint="#ffffff"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/edit_employee_lastname"
                        android:hint="Last Name"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>

                        <!-- Breed field -->

            <android.support.design.widget.TextInputLayout
                android:layout_below="@+id/profile_input_lastname"
                android:id="@+id/profile_input_city"
                android:layout_width="match_parent"
                android:textColorHint="#ffffff"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/edit_employee_city"
                    android:hint="City"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_below="@+id/profile_input_city"
                android:id="@+id/profile_input_phone"
                android:layout_width="match_parent"
                android:textColorHint="#ffffff"
                android:layout_margin="4dp"
                android:layout_height="wrap_content"
                >

                <EditText
                    android:id="@+id/edit_employee_phone"
                    android:hint="Phone Number"
                    android:inputType="textCapWords"
                    android:maxLines="1"
                    android:textAlignment="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </android.support.design.widget.TextInputLayout>
                <android.support.design.widget.TextInputLayout
                    android:layout_below="@+id/profile_input_phone"
                    android:id="@+id/profile_input_email"
                    android:layout_width="match_parent"
                    android:textColorHint="#ffffff"
                    android:layout_margin="4dp"
                    android:layout_height="wrap_content"
                    >

                    <EditText
                        android:id="@+id/edit_employee_email"
                        android:hint="Email"
                        android:inputType="textCapWords"
                        android:maxLines="1"
                        android:textAlignment="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                </android.support.design.widget.TextInputLayout>

                <Spinner
                            android:id="@+id/spinner_gender"
                            android:layout_height="40dp"
                            android:layout_width="match_parent"
                            android:spinnerMode="dropdown"/>

            </LinearLayout>


</com.hendraanggrian.widget.RevealFrameLayout>